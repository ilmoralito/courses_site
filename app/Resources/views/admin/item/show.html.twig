{% extends 'admin/master.html.twig' %}

{% block title %}
    {{ item.name }}
{% endblock %}

{% block javascripts %}
    <script>
        {
            const trigger = document.querySelector('#delete_form');

            trigger.addEventListener('submit', deleteObject);

            function deleteObject(e) {
                if (!confirm('Â¿Estas seguro?')) {
                    e.preventDefault();

                    return false
                }
            }
        }
    </script>
{% endblock %}

{% block body %}
    <table class="table is-fullwidth">
        <col width="25%">
        <col width="75%">

        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ item.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="buttons">
        <a href="{{ path('admin_items_index') }}" class="button is-text">Ir a lista</a>

        <a href="{{ path('admin_items_edit', { 'id': item.id }) }}" class="button is-text">Editar</a>

        {{ form_start(delete_form, { 'attr': { 'id': 'delete_form' } }) }}
            <input type="submit" value="Eliminar" class="button is-text">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
