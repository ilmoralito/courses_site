{% extends 'admin/master.html.twig' %}

{% block title %}
    Editar {{ facilitator.name }}
{% endblock %}

{% block body %}

    {{ form_start(edit_form, { 'attr': { 'autocomplete': 'off' } }) }}
        {{ form_errors(edit_form) }}

        <div class="field">
            {{ form_label(edit_form.name, 'Nombre y apellido', { 'label_attr': { 'class': 'label' } }) }}

            <div class="control">
                {{ form_errors(edit_form.name) }}

                {{ form_widget(edit_form.name, { 'attr': { 'class': 'input' } }) }}
            </div>
        </div>

        <div class="columns">
            <div class="column">
                <div class="field">
                    {{ form_label(edit_form.image, 'Imagen', { 'label_attr': { 'class': 'label' } }) }}

                    <div class="control">
                        {{ form_errors(edit_form.image) }}

                        {{ form_widget(edit_form.image, { 'attr': { 'class': 'input', 'readonly': true } }) }}
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="field">
                    {{ form_label(edit_form.site, 'Sitio', { 'label_attr': { 'class': 'label' } }) }}

                    <div class="control">
                        {{ form_errors(edit_form.site) }}

                        {{ form_widget(edit_form.site, { 'attr': { 'class': 'input' } }) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="field">
            {{ form_label(edit_form.profile, 'Perfil', { 'label_attr': { 'class': 'label' } }) }}

            <div class="control">
                {{ form_errors(edit_form.profile) }}

                {{ form_widget(edit_form.profile, { 'attr': { 'class': 'textarea' } }) }}
            </div>
        </div>

        <div class="field">
            <div class="buttons">
                <input type="submit" value="Actualizar" class="button is-primary"/>

                <a href="{{ path('admin_facilitators_index') }}" class="button is-text">Ir a lista</a>
            </div>
        </div>
    {{ form_end(edit_form) }}
{% endblock %}
