{% extends 'base.html.twig' %}

{% block body %}
    <h1>Course</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ course.slug }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{% if course.startDate %}{{ course.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Closingdate</th>
                <td>{% if course.closingDate %}{{ course.closingDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Startsat</th>
                <td>{% if course.startsAt %}{{ course.startsAt|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Endsat</th>
                <td>{% if course.endsAt %}{{ course.endsAt|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Objetive</th>
                <td>{{ course.objetive }}</td>
            </tr>
            <tr>
                <th>Addressedto</th>
                <td>{{ course.addressedTo }}</td>
            </tr>
            <tr>
                <th>Result</th>
                <td>{{ course.result }}</td>
            </tr>
            <tr>
                <th>Requirements</th>
                <td>{{ course.requirements }}</td>
            </tr>
            <tr>
                <th>Modality</th>
                <td>{{ course.modality }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ course.place }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ course.cost }}</td>
            </tr>
            <tr>
                <th>Registrationfee</th>
                <td>{{ course.registrationFee }}</td>
            </tr>
            <tr>
                <th>Isenabled</th>
                <td>{% if course.isEnabled %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ course.type }}</td>
            </tr>
            <tr>
                <th>Numberofmeetings</th>
                <td>{{ course.numberOfMeetings }}</td>
            </tr>
            <tr>
                <th>Postedat</th>
                <td>{% if course.postedAt %}{{ course.postedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_courses_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_courses_edit', { 'id': course.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
