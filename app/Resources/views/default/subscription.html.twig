{% extends 'base.html.twig' %}

{% block title %}Suscribete{% endblock %}

{% block body %}
    <section class="section">
        <div class="columns">
            <div class="column is-half is-offset-one-quarter">
                {{ form_start(form, {'attr': {'autocomplete': 'off'}}) }}
                    {{ form_errors(form) }}

                    <div class="field">
                        {{ form_label(form.fullName, 'Nombre y apellido', { 'label_attr': {'class': 'label'}}) }}

                        <div class="control">
                            {{ form_errors(form.fullName) }}

                            {{ form_widget(form.fullName, { 'attr': {'class': 'input'} }) }}
                        </div>
                    </div>

                    <div class="field">
                        {{ form_label(form.email, 'Correo electronico', { 'label_attr': {'class': 'label'}}) }}

                        <div class="control">
                            {{ form_errors(form.email) }}

                            {{ form_widget(form.email, { 'attr': {'class': 'input'} }) }}
                        </div>
                    </div>

                    <div class="field">
                        <div class="control">
                            {{ form_widget(form.send, { 'attr': { 'class': 'button is-primary' } }) }}
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}